<Page x:Class="Airlines_amonic.Frames.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_amonic.Frames"
      mc:Ignorable="d" 
     Title="UserPage" Height="350" Width="480">

    <Grid Background="#FFFACB">
        <Menu Background="#F79420"  HorizontalAlignment="Left" Height="35" Margin="0,2,0,0" VerticalAlignment="Top" Width="475">
            <Button Content="Exit" Background="#196AA6" Foreground="White"  BorderBrush="#196AA6"  HorizontalAlignment="Left" VerticalAlignment="Center" Width="85" Height="25" Click="Button_Click"/>

        </Menu>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <Label Name="Hello" Content="Label" />
            <TextBlock Name="TimeInSystem"  TextWrapping="Wrap" Text="Time spent on system: 0:0:0"  Width="172" Height="18"/>
            <TextBlock Name="HowMuchCrash"  TextWrapping="Wrap" Text="Number of crashes:   0"  Width="134" Height="18"/>
        </StackPanel>
       
    </Grid>
</Page>
